<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ItemsRegistrationActivity">

    <ImageView
        android:id="@+id/imageViewItemActivity"
        android:layout_width="143dp"
        android:layout_height="156dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_launcher_background" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addpictureiItemRegistraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D85BB343"
        android:layout_marginLeft="250dp"
        android:src="@drawable/add_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Please Select the type of item"
        android:textSize="23dp" />


    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioItemFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Found" />

        <RadioButton
            android:id="@+id/RadioItemLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Lost" />
    </RadioGroup>


    <EditText
        android:id="@+id/editextTitleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDescriptionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description of item"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/editTextCategoryspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:spinnerMode="dropdown"

        />

    <Button
        android:id="@+id/buttonaddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#D85BB343"
        android:hint="Please select a category"
        android:text="Add" />

    <Button
        android:id="@+id/buttonBacktoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D85BB343"
        android:text="Back" />
</LinearLayout>